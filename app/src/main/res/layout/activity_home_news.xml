<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="in.grabnews.views.homenews.HomeNewsViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/colorE5E5E5"

        android:layout_height="match_parent">

        <android.support.v4.widget.DrawerLayout

            android:id="@+id/drawerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/clRootView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.design.widget.AppBarLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.Toolbar
                                android:id="@+id/toolbar"
                                style="@style/Toolbar"
                                app:subtitleTextColor="@color/colorWhite"
                                app:title="@string/title_home"
                                app:titleTextAppearance="@style/Toolbar.TitleText"
                                app:titleTextColor="@color/colorWhite" />

                        </RelativeLayout>
                    </android.support.design.widget.AppBarLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:gravity="center"
                            android:id="@+id/countryTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_corner_gray"
                            android:onClick="@{() -> viewModel.onSelectCountry()}"
                            android:padding="10dp"
                            android:text="@{viewModel.countryCode}" />

                        <TextView
                            android:id="@+id/categoryTextView"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_corner_gray"
                            android:onClick="@{() -> viewModel.onSelectCategory()}"
                            android:padding="10dp"
                            android:text="@{viewModel.newsCategory}" />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/newsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorE5E5E5"
                        android:paddingTop="8dp"
                        app:adapter="@{viewModel.liveNewsObservableArrayList}"
                        tools:listitem="@layout/item_news"></android.support.v7.widget.RecyclerView>

                </LinearLayout>
            </android.support.design.widget.CoordinatorLayout>

            <android.support.design.widget.NavigationView
                android:id="@+id/navigationView"
                style="@style/Widget.Design.NavigationView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@color/colorWhite"
                app:itemBackground="@color/colorWhite"
                app:itemIconTint="@color/colorBlack"
                app:itemTextColor="@color/colorBlack"
                app:menu="@menu/drawer">

                <TextView
                    android:id="@+id/tvAppVersion"
                    style="@style/TextStyle.Title.Sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:padding="5dp"
                    android:text="@{viewModel.appVersion}" />
            </android.support.design.widget.NavigationView>
        </android.support.v4.widget.DrawerLayout>

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/progressContentLoadingProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE}" />

    </FrameLayout>

</layout>